{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist"
  },
  "include": ["src"],
  "types": [
    "chrome"
  ]
}
